<?xml version="1.0" encoding="UTF-8"?>
<style-scheme id="midnight-clear" name="Midnight Clear" version="1.0">
  <author>Claude</author>
  <description>Dark theme with high legibility - soft colors, easy on the eyes</description>

  <!-- Palette -->
  <color name="bg"           value="#1c1c1c"/>
  <color name="bg_light"     value="#252525"/>
  <color name="bg_selection" value="#3a3a3a"/>
  <color name="fg"           value="#e0e0e0"/>
  <color name="fg_dim"       value="#888888"/>
  <color name="red"          value="#ff6b6b"/>
  <color name="green"        value="#87d687"/>
  <color name="yellow"       value="#e0c080"/>
  <color name="blue"         value="#82aaff"/>
  <color name="purple"       value="#c792ea"/>
  <color name="cyan"         value="#80cbc4"/>
  <color name="orange"       value="#ffab70"/>

  <!-- Global -->
  <style name="text"                        foreground="fg" background="bg"/>
  <style name="selection"                   background="bg_selection"/>
  <style name="cursor"                      foreground="fg"/>
  <style name="current-line"                background="bg_light"/>
  <style name="line-numbers"                foreground="fg_dim" background="bg"/>
  <style name="current-line-number"         foreground="fg" background="bg_light"/>
  <style name="bracket-match"               foreground="cyan" bold="true"/>
  <style name="bracket-mismatch"            foreground="red" underline="true"/>
  <style name="right-margin"                foreground="fg_dim" background="bg_light"/>
  <style name="draw-spaces"                 foreground="fg_dim"/>
  <style name="background-pattern"          background="bg_light"/>

  <!-- Search -->
  <style name="search-match"                foreground="bg" background="yellow"/>

  <!-- Bookmarks -->
  <style name="bookmark"                    background="bg_selection"/>

  <!-- Comments -->
  <style name="def:comment"                 foreground="fg_dim" italic="true"/>
  <style name="def:shebang"                 foreground="fg_dim" italic="true"/>
  <style name="def:doc-comment-element"     foreground="fg_dim"/>

  <!-- Constants -->
  <style name="def:constant"                foreground="orange"/>
  <style name="def:string"                  foreground="green"/>
  <style name="def:special-char"            foreground="cyan"/>
  <style name="def:special-constant"        foreground="purple"/>
  <style name="def:character"               foreground="green"/>
  <style name="def:number"                  foreground="orange"/>
  <style name="def:floating-point"          foreground="orange"/>
  <style name="def:decimal"                 foreground="orange"/>
  <style name="def:base-n-integer"          foreground="orange"/>
  <style name="def:complex"                 foreground="orange"/>
  <style name="def:boolean"                 foreground="purple"/>

  <!-- Identifiers -->
  <style name="def:identifier"              foreground="fg"/>
  <style name="def:function"                foreground="blue"/>
  <style name="def:builtin"                 foreground="cyan"/>

  <!-- Statements -->
  <style name="def:statement"               foreground="purple"/>
  <style name="def:operator"                foreground="cyan"/>
  <style name="def:keyword"                 foreground="purple"/>

  <!-- Types -->
  <style name="def:type"                    foreground="yellow"/>
  <style name="def:class"                   foreground="yellow"/>

  <!-- Markup -->
  <style name="def:heading"                 foreground="blue" bold="true"/>
  <style name="def:link-text"               foreground="cyan"/>
  <style name="def:link-symbol"             foreground="cyan"/>
  <style name="def:link-destination"        foreground="blue" underline="true"/>
  <style name="def:emphasis"                italic="true"/>
  <style name="def:strong-emphasis"         bold="true"/>
  <style name="def:inline-code"             foreground="green"/>
  <style name="def:insertion"               foreground="green"/>
  <style name="def:deletion"                foreground="red"/>
  <style name="def:list-marker"             foreground="purple"/>
  <style name="def:thematic-break"          foreground="fg_dim"/>
  <style name="def:preformatted-section"    foreground="green"/>

  <!-- Others -->
  <style name="def:preprocessor"            foreground="purple"/>
  <style name="def:error"                   foreground="red" underline="true"/>
  <style name="def:warning"                 foreground="yellow"/>
  <style name="def:note"                    foreground="cyan"/>
  <style name="def:net-address"             foreground="blue" underline="true"/>
  <style name="def:underlined"              underline="true"/>

  <!-- Language specific -->
  <style name="c:printf"                    foreground="cyan"/>
  <style name="c:storage-class"             foreground="purple"/>
  <style name="css:property-name"           foreground="cyan"/>
  <style name="css:property-values"         foreground="orange"/>
  <style name="diff:added-line"             foreground="green"/>
  <style name="diff:removed-line"           foreground="red"/>
  <style name="diff:changed-line"           foreground="yellow"/>
  <style name="diff:location"               foreground="blue"/>
  <style name="html:tag"                    foreground="red"/>
  <style name="html:attrib-name"            foreground="yellow"/>
  <style name="html:attrib-value"           foreground="green"/>
  <style name="json:keyname"                foreground="blue"/>
  <style name="python:builtin-function"     foreground="cyan"/>
  <style name="python:class-name"           foreground="yellow"/>
  <style name="sh:variable"                 foreground="cyan"/>
  <style name="xml:element-name"            foreground="red"/>
  <style name="xml:attribute-name"          foreground="yellow"/>
  <style name="xml:attribute-value"         foreground="green"/>
</style-scheme>
